{
  "manifest_version": 3,
  "name": "SwarnSports",
  "short_name": "SwarnSports",
  "version": "1.0.0",
  "description": "SwarnSports is a lightweight Chrome extension that organizes streaming links from Telegram Web into a clean interface.",
  "permissions": ["activeTab", "alarms", "storage", "scripting", "tabs"],
  "host_permissions": [
    "https://web.telegram.org/*",
    "https://webz.telegram.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Telegram Stream Extractor"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://web.telegram.org/*", "https://webz.telegram.org/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
